    "compilerOptions": {
        "outDir": "dist-type",
        "rootDir": "src",
        "jsx": "react",
        "esModuleInterop": true,
        "target": "ES2015",
        "moduleResolution": "node",
        "module": "CommonJS",
        "skipLibCheck": true
